    -- Only volatilve functions appear on the mutation object
    create function add_smallints(a smallint, b smallint)
        returns smallint language sql volatile
    as $$ select a + b; $$;
    select jsonb_pretty(graphql.resolve($$
        mutation {
            addSmallints(a: 1, b: 2)
        }
    $$));
       jsonb_pretty        
---------------------------
 {                        +
     "data": {            +
         "addSmallints": 3+
     }                    +
 }
(1 row)

