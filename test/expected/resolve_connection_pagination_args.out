begin;
    create table account(
        id int primary key
    );
    comment on table account is e'@graphql({"totalCount": {"enabled": true}})';
    insert into public.account(id)
    select * from generate_series(1,5);
    select jsonb_pretty(
        graphql.resolve($$
            {
              accountCollection(first: 2, after: "WyJhY2NvdW50IiwgM10=") {
                totalCount
                edges {
                  node {
                    id
                  }
                }
              }
            }
        $$)
    );
          jsonb_pretty           
---------------------------------
 {                              +
     "data": {                  +
         "accountCollection": { +
             "edges": [         +
                 {              +
                     "node": {  +
                         "id": 4+
                     }          +
                 },             +
                 {              +
                     "node": {  +
                         "id": 5+
                     }          +
                 }              +
             ],                 +
             "totalCount": 5    +
         }                      +
     },                         +
     "errors": [                +
     ]                          +
 }
(1 row)

